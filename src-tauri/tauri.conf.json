{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ACGStation Sync",
    "version": "1.0.9"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "exists": true,
        "createDir": true,
        "copyFile": true,
        "removeFile": true,
        "removeDir": true
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      },
      "http": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "ACGStation Sync",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://file.iscar.net"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.acgstation.sync",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
